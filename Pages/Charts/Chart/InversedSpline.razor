@page "/Charts/InversedSpline"
@using Syncfusion.EJ2.Blazor.Charts

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Inversed Spline";
    SampleBrowser.CurrentControlName = "Chart";
    SampleBrowser.CurrentControlCategory = "Chart";
    SampleBrowser.CurrentControl = SampleBrowser.Config.Chart;
    SampleBrowser.ActionDescription = new string[] {
        @"<p>
        This sample illustrates a spline series by inversing X and Y Axis. Data points are enhanced with marker and tooltip.
    </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
        In this example, you can see how to render and configure the spline type charts. Spline chart connects each point in series through a curved line. You can use <code>dashArray</code>, <code>width</code>, <code>fill</code> properties to customize the spline. <code>Marker</code> and <code>dataLabel</code> are used to represent individual data and its value.
    </p>
    <p>
        Tooltip is enabled in this example, to see the tooltip in action, hover a point or tap on a point in touch enabled devices.
    </p>
    <br>

    <p>
        More information on the inversed spline series can be found in this
        <a target=""_blank"" href=""http://ej2.syncfusion.com/documentation/chart/api-series.html#type-chartseriestype"">documentation section</a>.
    </p>"
    };
}
@*End:Hidden*@

<div class="control-section">
    <EjsChart id="inversedspline" title="Climate Graph - 2012" dataSource="@chartData" isTransposed="true">
        <ChartArea><ChartAreaBorder Width="0"></ChartAreaBorder></ChartArea>
        <ChartPrimaryXAxis ValueType="Syncfusion.EJ2.Blazor.Charts.ValueType.Category" Interval="1" LabelIntersectAction="LabelIntersectAction.Rotate90">
            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
            <ChartAxisMinorTickLines Width="0"></ChartAxisMinorTickLines>
            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
        </ChartPrimaryXAxis>
        <ChartPrimaryYAxis LabelFormat="{value}C">            
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
        </ChartPrimaryYAxis>
        <ChartTooltipsettings enable="true"></ChartTooltipsettings>
        <ChartSeriesCollection>
            <ChartSeries name="London" xName="xValue" width="2"
                         opacity="1" yName="yValue" type="ChartSeriesType.Spline">
                <ChartMarker Visible="true" Width="10" Height="10">
                </ChartMarker>
            </ChartSeries>
            <ChartSeries name="France" xName="xValue" width="2"
                         opacity="1" yName="yValue1" type="ChartSeriesType.Spline">
                <ChartMarker Visible="true" Width="10" Height="10">
                </ChartMarker>
            </ChartSeries>           
        </ChartSeriesCollection>
    </EjsChart>
</div>

@code{

    public class InversedLineChartData
    {
        public string xValue;
        public double yValue;
        public double yValue1;
    }

    List<InversedLineChartData> chartData = new List<InversedLineChartData>
            {
                new InversedLineChartData { xValue = "Jan", yValue = -1, yValue1 = 7 },
                new InversedLineChartData { xValue = "Mar", yValue = 12, yValue1 = 2 },
                new InversedLineChartData { xValue = "Apr", yValue = 25, yValue1 = 13 },
                new InversedLineChartData { xValue = "Jun", yValue = 31, yValue1 = 21 },
                new InversedLineChartData { xValue = "Aug", yValue = 26, yValue1 = 26 },
                new InversedLineChartData { xValue = "Oct", yValue = 14, yValue1 = 10 },
                new InversedLineChartData { xValue = "Dec", yValue = 8, yValue1 = 0 },
            };
}
